<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_ava_notification"
        android:layout_width="@dimen/size_ava_dp"
        android:layout_height="@dimen/size_ava_dp"
        android:layout_marginStart="@dimen/margin_all_8dp"
        android:layout_marginLeft="@dimen/margin_all_8dp"
        android:layout_marginTop="@dimen/margin_all_8dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/example_round_avatar" />

    <TextView
        android:id="@+id/text_notification"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/margin_all_8dp"
        android:layout_marginLeft="@dimen/margin_all_8dp"
        android:layout_marginEnd="@dimen/margin_all_8dp"
        android:layout_marginRight="@dimen/margin_all_8dp"
        android:text="@string/notification_demo_text"
        app:layout_constraintBottom_toBottomOf="@+id/image_ava_notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_ava_notification"
        app:layout_constraintTop_toTopOf="@+id/image_ava_notification" />
</androidx.constraintlayout.widget.ConstraintLayout>